<h1>Edit Ingredient</h1>

<%= form_for [@recipe,@ingredient] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :amount %>
  <%= f.number_field :amount %>
  <br>
  <%= f.label :measurement %>
  <%= f.text_field :measurement %>
  <br>
  <%= f.label :calories %>
  <%= f.number_field :calories %>
  <br>
  <%= f.submit %>
<% end %>
