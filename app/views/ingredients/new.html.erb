<h1>Add New Ingredient</h1>

<%= form_for [@recipe,@ingredient] do |f| %>
  <%= f.label :name %><sup>*</sup><br>
  <%= f.text_field :name, required: true %>
  <br>
  <%= f.label :amount %><sup>*</sup><br>
  <span class="info">(whole number, fraction)</span>
  <br>
  <%= f.text_field :amount, required: true %>
  <br>
  <%= f.label :measurement %>
  <br>
  <span class="info">(cup, tbsp, slice, lb, etc.)</span>
  <br>
  <%= f.text_field :measurement %>
  <br>
  <%= f.label :calories %><sup>*</sup><br>
  <%= f.number_field :calories, required: true %>
  <br>
  <%= f.submit %>
<% end %>
