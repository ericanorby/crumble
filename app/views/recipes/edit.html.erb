<h1>Edit Recipe</h1>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>
  <br>
  <%= f.label :servings %>
  <%= f.number_field :servings %>
  <br>
  <%= f.label :total_cost %>
  <%= f.number_field :total_cost %>
  <br>
  <%= f.label :difficulty %>
  <%= f.text_field :difficulty %>
  <br>
  <%= f.label :directions %>
  <%= f.text_area :directions %>
  <br>
  <%= f.submit %>
<% end %>
