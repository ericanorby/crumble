<h1>Add a Recipe</h1>

<%= form_for @recipe do |f|%>
<div class="add-recipe">
    <div>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
        <br>
        <%= f.label :photo_url %><br>
        <%= f.text_field :photo_url %>
        <br>
        <div class="flex-no-wrap">
            <div>
                <%= f.label :servings %><br>
                <%= f.number_field :servings %>
            </div>
            <div style="margin-left: 30px;">
                <%= f.label :"total_cost ($)" %><br>
                <%= f.number_field :total_cost %>
            </div>
        </div>

        <%= f.label :difficulty %><br>
        <%= f.text_field :difficulty %>
        <br>
    </div>
    <div>
        <%= f.label :directions %><br>
        <%= f.text_area :directions %>
        <br>
    </div>
</div>
<%= f.submit %>

<% end %>
