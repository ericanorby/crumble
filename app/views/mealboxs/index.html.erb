<div class="inline">
  <h1>Recipe Box</h1>
  <%= link_to "+ Add New", new_meal_path, style: "float:right" %>
</div>



<div class="flex-end">
    <% @favorites.each do |fav| %>
    <% @meal = Meal.find(fav.meal_id) %>
    <div class="recipe">
      <%= link_to @meal.name, meal_path(@meal) %>
      <div class="preview" style="background-image: url(<%= @meal.photo_url %>)"></div>
    </div>
    <% end %>
</div>
