<div class="inline">
  <h1>Recipe Box</h1>
  <%= link_to "+ Add New", new_recipe_path, style: "float:right" %>
</div>

<% if current_user.favorites.length == 0 %>
  <p>Add some recipes!</p>
<% else %>
  <div class="flex-end">
      <% @favorites.each do |fav| %>
      <% @recipe = Recipe.find(fav.recipe_id) %>
      <div class="recipe">
        <%= link_to @recipe.name, recipe_path(@recipe) %>
        <div class="preview" style="background-image: url(<%= @recipe.photo_url %>)"></div>
      </div>
      <% end %>
  </div>
<% end %>
